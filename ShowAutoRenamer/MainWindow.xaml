<Window x:Class="ShowAutoRenamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Show renamer" Height="200" Width="650" Topmost="True" ResizeMode="NoResize" Drop="drop" AllowDrop="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="508*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="begin" Content="Rename" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="begin_Click" Grid.Column="1"/>
        <Button Content="Select" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="75" Height="25" Click="Button_Click" Grid.Column="1"/>
        <TextBox x:Name="textBox" Height="25" Margin="139,10,90,0" VerticalAlignment="Top" MaxLines="1" Padding="0,3,0,0" Grid.Column="1" TextChanged="textBox_TextChanged"/>
        <Label x:Name="Preview" Content="" Margin="139,35,10,0" VerticalAlignment="Top" Background="#FFF0F0F0" Grid.Column="1"/>
        <TextBox x:Name="showName" HorizontalAlignment="Left" Height="23" Margin="298,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="202" TextChanged="showName_TextChanged" Background="#FFE6E6E6" Grid.Column="1"/>
        <Label Content="Show name (not required)" HorizontalAlignment="Left" Margin="139,66,0,0" VerticalAlignment="Top" Width="159" Foreground="Black" Grid.Column="1"/>
        <Grid Margin="10,6,0,0" Width="257" Background="#FF7396F1" Grid.ColumnSpan="2" HorizontalAlignment="Left">
            <Label Content="OPTIONS" FontSize="50" FontWeight="Bold" Padding="0" Margin="0,-22,0,0" Foreground="White" Height="53" Width="280" FontFamily="Segoe UI Black" HorizontalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <CheckBox x:Name="removeMinus" Content="Remove -" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top" Click="removeMinus_Click" Foreground="White"/>
            <CheckBox x:Name="remove_" Content="Remove _" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top" Click="removeMinus_Click" Foreground="White"/>
            <CheckBox x:Name="displayName" Content="Show name in title" HorizontalAlignment="Left" Margin="10,101,0,0" VerticalAlignment="Top" Click="removeMinus_Click" Foreground="White"/>
            <CheckBox x:Name="useFolder" Content="Folder" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top" Click="removeMinus_Click" Foreground="White"/>
            <CheckBox x:Name="episodeNaming" Content="Automagical episode naming" HorizontalAlignment="Left" Margin="10,121,0,0" VerticalAlignment="Top" Click="removeMinus_Click" Foreground="White"/>
        </Grid>
        <Button x:Name="findShow" Content="Find Show" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75" Click="findShow_Click"/>

    </Grid>
</Window>
